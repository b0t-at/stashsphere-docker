# --- Image ---
STASHSPHERE_BACKEND_IMAGE=ghcr.io/b0t-at/stashsphere-backend:latest
STASHSPHERE_FRONTEND_IMAGE=ghcr.io/b0t-at/stashsphere-frontend:latest

# --- Traefik ---
TRAEFIK_HOST=stash.example.com
TRAEFIK_CERTRESOLVER=letsencrypt

# --- Runtime behavior ---
STASHSPHERE_AUTO_CREATE_CONFIG=true
STASHSPHERE_AUTO_MIGRATE=true
STASHSPHERE_INSTANCE_NAME=My StashSphere
STASHSPHERE_CONTAINER_UID=10001
STASHSPHERE_CONTAINER_GID=10001

# --- Public URLs / domains ---
STASHSPHERE_FRONTEND_URL=https://stash.example.com
STASHSPHERE_ALLOWED_ORIGIN=https://stash.example.com
STASHSPHERE_API_DOMAIN=stash.example.com
STASHSPHERE_PUBLIC_API_HOST=https://stash.example.com

# --- Database ---
STASHSPHERE_DB_HOST=postgres
STASHSPHERE_DB_PORT=5432
STASHSPHERE_DB_USER=stashsphere
STASHSPHERE_DB_NAME=stashsphere
STASHSPHERE_DB_PASSWORD=change-me
STASHSPHERE_DB_SSLMODE=disable
